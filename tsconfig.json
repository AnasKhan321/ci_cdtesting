{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "types": ["node"],
    "resolveJsonModule": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
